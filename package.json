{
  "name": "cep-bundler-webpack-starter",
  "version": "0.0.1",
  "description": "CEP Extension example using the webpack bundler",
  "main": "index.js",
  "cep": {
    "id": "nl.koenschmeets.cep-bundler-webpack-starter",
    "name": "CEP Bundler Webpack Starter",
    "cefParams": [
      "--allow-file-access-from-files",
      "--allow-file-access",
      "--enable-nodejs",
      "--mixed-content"
    ]
  },
  "scripts": {
    "watch": "webpack --config extendscript.config.js --watch & webpack --config cep.config.js --watch & wait",
    "start": "webpack --config extendscript.config.js --watch & webpack-dev-server --config cep.config & wait",
    "build": "webpack --config extendscript.config.js --display verbose && webpack --config cep.config.js --display verbose"
  },
  "author": "Koen Schmeets",
  "license": "MIT",
  "dependencies": {
    "rambda": "^2.4.1"
  },
  "devDependencies": {
    "@types/node": "^11.13.4",
    "cep-bundler-webpack": "0.0.9",
    "cep-interface": "^0.5.1",
    "extendscript-es5-shim-ts": "0.0.1",
    "types-for-adobe": "github:adobe-extension-tools/types-for-adobe",
    "typescript": "^3.4.3"
  }
}
