{
  "compilerOptions": {
    "outDir": "../dist/js",
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    // "strict": true,
    // "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "sourceRoot": "",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
      "esnext"
    ]
  },
  "include": [
    "./**/*"
  ]
}

